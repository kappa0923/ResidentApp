<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:weightSum="1"
    android:id="@+id/morseView"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/toolbar_title"
            android:text="Create Morse Code"
            android:textSize="10pt"
            />

    </android.support.v7.widget.Toolbar>

    <com.example.tomoyasu.residentapp.MorseView
        android:id="@+id/waveView"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="0.7"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:text="Sign"
        android:id="@+id/morseText"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:layout_weight="0.1"
        android:textSize="18pt"
        />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/horizontalScrollView"
        android:layout_gravity="bottom"
        android:layout_weight="0.2" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <Button
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:layout_margin="6dp"
                android:padding="10dp"
                android:id="@+id/appButton"
                android:gravity="bottom|center_horizontal"
                android:text="app"
                android:drawableTop="@drawable/rocket"
                android:background="@drawable/button_items"
                />
            <Button
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:layout_margin="6dp"
                android:padding="10dp"
                android:id="@+id/webButton"
                android:gravity="bottom|center_horizontal"
                android:text="web"
                android:drawableTop="@drawable/net"
                android:background="@drawable/button_items"
            />
            <Button
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:layout_margin="6dp"
                android:padding="10dp"
                android:id="@+id/homeButton"
                android:gravity="bottom|center_horizontal"
                android:text="home"
                android:drawableTop="@drawable/home"
                android:background="@drawable/button_items"
                />
            <Button
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:layout_margin="6dp"
                android:paddingTop="10dp"
                android:paddingBottom="4dp"
                android:id="@+id/phoneButton"
                android:gravity="bottom|center_horizontal"
                android:text="catch\nphone"
                android:textSize="6pt"
                android:drawableTop="@drawable/phone"
                android:background="@drawable/button_items"
                />
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>